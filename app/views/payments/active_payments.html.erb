<h1>Listing Active payments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Provider</th>
      <th>State</th>
      <th>Day date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.provider %></td>
        <td><%= payment.state %></td>
        <td><%= payment.day_date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>