<h1>Working day by date</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sale</th>
      <th>Cash</th>
      <th>Change</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @working_day_by_date.each do |working_day| %>
      <tr>
        <td><%= working_day.day_date %></td>
        <td><%= working_day.sale %></td>
        <td><%= working_day.cash %></td>
        <td><%= working_day.change_coins %></td>
        <td><%= link_to 'Show', working_day %></td>
        <td><%= link_to 'Edit', edit_working_day_path(working_day) %></td>
        <td><%= link_to 'Destroy', working_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Working day', new_working_day_path %>